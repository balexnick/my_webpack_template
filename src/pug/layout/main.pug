include ../utils/mixins
block variables

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title #{title}
  body
    if title === 'Webpack page'
      .webpack-color
        +mainTemplate()
    else if title === 'Pug page'
      .pug-color
        +mainTemplate()
    else if title === 'Sass page'
      .sass-color
        +mainTemplate()
